<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.savanticab.seaweedapp.FullscreenActivity$PlaceholderFragment"
	android:gravity="center">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"    
        android:contentDescription="@string/seaweed_center_logo"
        android:maxWidth="@dimen/activity_horizontal_margin"
        android:scaleType="fitStart"
        android:src="@drawable/seaweed_center_logo_2" />
    
    <Button
        android:id="@+id/button_to_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"       
        android:layout_gravity="left|center_vertical"
        android:layout_toRightOf="@+id/imageView1"
        android:onClick="@+id/button_factory_click"
        android:text="@string/start_to_factory" />
 
    <Button
        android:id="@+id/button_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_alignLeft="@+id/button_to_factory"
        android:layout_alignRight="@+id/button_to_factory"
        android:layout_below="@+id/button_to_factory"
        android:onClick="@+id/button_report_click"
        android:text="@string/start_to_reports" />

    <Button
        android:id="@+id/button_to_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_report"
        android:layout_alignRight="@+id/button_report"
        android:layout_below="@+id/button_report"
        android:onClick="@+id/button_shop_click"
        android:text="@string/start_to_shop" />

</RelativeLayout>