<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.savanticab.seaweedapp.FullscreenActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/container"
        android:layout_alignTop="@id/container"
        android:contentDescription="@string/seaweed_center_logo"
        android:maxWidth="@dimen/activity_horizontal_margin"
        android:scaleType="fitStart"
        android:src="@drawable/seaweed_center_logo_2" />

    <Button
        android:id="@+id/button_to_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginBottom="113dp"
        android:onClick="@+id/button_factory_click"
        android:text="@string/start_to_factory" />

    <Button
        android:id="@+id/button_to_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_to_factory"
        android:layout_alignLeft="@+id/button_to_factory"
        android:layout_marginBottom="68dp"
        android:onClick="@+id/button_shop_click"
        android:text="@string/start_to_shop" />

    <Button
        android:id="@+id/button_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_to_shop"
        android:layout_alignLeft="@+id/button_to_shop"
        android:layout_marginBottom="50dp"
        android:onClick="@+id/button_report_click"
        android:text="@string/start_to_reports" />

</RelativeLayout>