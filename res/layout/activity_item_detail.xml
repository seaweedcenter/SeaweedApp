<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity"
    tools:ignore="MergeRootFrame" 
    android:columnCount="8" >

        <TextView
            android:id="@+id/textView1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="@string/raw_material_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="left|bottom"
            android:layout_row="1"
            android:text="@string/material_stock_title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView4"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="2"
            android:text="@string/material_stock_storage_amount"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="@string/material_stock_ordered" />

        <EditText
            android:id="@+id/production_planned_quantity"
            android:hint="@string/editTextQuantityHint"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="3"
            android:ems="10"
            android:inputType="numberDecimal" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_row="4"
            android:text="@string/material_stock_arrived" />

        <Space
            android:layout_width="96dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="96dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Space
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="1" />

        <Space
            android:layout_width="1dp"
            android:layout_height="49dp"
            android:layout_column="0"
            android:layout_row="3" />

        <Space
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:layout_column="1"
            android:layout_row="2" />

        <Space
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:layout_column="1"
            android:layout_row="3" />

        <Space
            android:layout_width="144dp"
            android:layout_height="1dp"
            android:layout_column="2"
            android:layout_row="0" />

        <Space
            android:layout_width="336dp"
            android:layout_height="1dp"
            android:layout_column="3"
            android:layout_row="0" />

        <Space
            android:layout_width="2dp"
            android:layout_height="1dp"
            android:layout_column="6"
            android:layout_row="0" />

        <Space
            android:layout_width="226dp"
            android:layout_height="1dp"
            android:layout_column="7"
            android:layout_row="0" />

        <Space
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:layout_column="2"
            android:layout_row="3" />

        <Space
            android:layout_width="1dp"
            android:layout_height="178dp"
            android:layout_column="0"
            android:layout_row="4" />

        <Space
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:layout_column="0"
            android:layout_row="5" />

        <ImageButton
            android:id="@+id/imageButtonOK"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="7"
            android:layout_gravity="left|bottom"
            android:layout_row="5"
            android:contentDescription="@string/OK_button"
            android:src="@drawable/ok_bullet_large" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="5"
            android:layout_gravity="left"
            android:layout_row="5"
            android:contentDescription="@string/cancel_button"
            android:src="@drawable/error_bullet_large" />

        <Space
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="6" />

        <Space
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_column="4"
            android:layout_row="0" />

        <Space
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_row="6" />
    </GridLayout>

