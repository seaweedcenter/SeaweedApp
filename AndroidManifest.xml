<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.savanticab.seaweedapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/seaweed_center_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:vmSafeMode="true" android:logo="@drawable/seaweed_center_logo">
        <activity
            android:name="com.savanticab.seaweedapp.FullscreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.savanticab.seaweedapp.ItemListActivity"
            android:label="@string/at_the_factory" 
            android:parentActivityName=".FullscreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FullscreenActivity" />
        </activity>
        <activity
            android:name="com.savanticab.seaweedapp.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
    </application>


</manifest>
